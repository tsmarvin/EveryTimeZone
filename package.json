{
  "name": "every-time-zone",
  "version": "0.0.2-alpha.1",
  "description": "A static timezone overlap visualization tool for easy sharing and collaboration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run version:update && npm run clean && tsc && npm run copy-assets && npm run version:inject",
    "version:update": "node scripts/update-version.js",
    "version:inject": "node scripts/inject-version.js",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "copy-assets": "cp src/index.html dist/ && cp -r src/styles dist/ && cp -r src/scripts dist/ && mkdir -p dist/scripts/suncalc && cp node_modules/suncalc/suncalc.js dist/scripts/suncalc/ && cp node_modules/suncalc/LICENSE dist/scripts/suncalc/",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json,html,css,md}",
    "format:check": "prettier --check src/**/*.{ts,js,json,html,css,md}",
    "test": "npm run lint && npm run type-check && vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "commitlint": "commitlint --edit"
  },
  "keywords": [
    "timezone",
    "visualization",
    "static-site",
    "typescript"
  ],
  "author": "Taylor Marvin",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/suncalc": "^1.9.2",
    "suncalc": "^1.9.0"
  }
}
